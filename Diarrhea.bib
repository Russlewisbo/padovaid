@article{clark_etal19,
  title = {Clinical {{Yield}} of a {{Molecular Diagnostic Panel}} for {{Enteric Pathogens}} in {{Adult Outpatients With Diarrhea}} and {{Validation}} of {{Guidelines-Based Criteria}} for {{Testing}}},
  author = {Clark, Stephen D. and Sidlak, Michael and Mathers, Amy J. and Poulter, Melinda and {Platts-Mills}, James A.},
  year = {2019},
